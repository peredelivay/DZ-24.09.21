#include <iostream>
#include <string>

using namespace std;

int main() {
	setlocale(0, "Russian");
	bool day;
	bool shtori;
	bool lamp;
	cout << "На улице светло?" << endl;
	cin >> day;
	cout << "Шторы раздвинуты?" << endl;
	cin >> shtori;
	cout << "Лампа включена?" << endl;
	cin >> lamp;
	if (day && shtori || lamp == true) {
		cout << "В комнате светло";
	}
	if (day || shtori || lamp == false) {
		cout << "В комнате темно" << endl;
	}
